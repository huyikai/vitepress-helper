{
  // 继承自tsconfig.base.json
  "extends": "./tsconfig.base.json",
  // 编译选项
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "declarationDir": "lib/types",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/lib/**",
    "**.config.ts"
  ],
  "paths": {
    "@huyikai/vitepress-helper": [
      "src/index.ts"
    ]
  }
}